#!/bin/bash

# https://gitlab.archlinux.org/archlinux/devtools/-/merge_requests/197

args=("$@")
has_keep_unit=0

for arg in "${args[@]}"; do
    if [[ "$arg" == "--keep-unit" ]]; then
        has_keep_unit=1
    fi
done

if ! (( has_keep_unit )); then
    args=("${args[@]}" "--keep-unit")
fi

exec /usr/bin/arch-nspawn "${args[@]}"
